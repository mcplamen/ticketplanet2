generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  createdAt DateTime @default(now())
  events    Event[]
  tickets   Ticket[]
}

model Event {
  id          Int       @id @default(autoincrement())
  title       String
  description String?
  date        DateTime?
  logoPath    String?
  ownerId     Int
  owner       User      @relation(fields: [ownerId], references: [id])
  tickets     Ticket[]
  createdAt   DateTime  @default(now())
}

model Ticket {
  id        Int      @id @default(autoincrement())
  objectId  String   @unique
  saveUrl   String
  eventId   Int
  event     Event    @relation(fields: [eventId], references: [id])
  ownerId   Int
  owner     User     @relation(fields: [ownerId], references: [id])
  createdAt DateTime @default(now())
}
